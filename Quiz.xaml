<Page x:Class="FBLAQuestions.Quiz"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FBLAQuestions"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Quiz">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="19*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled"  >
            <StackPanel Name="MainStackPanel" Orientation="Vertical">
                <Label Content="Quiz" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 12, 0, 0" FontFamily="Bahnschrift SemiLight SemiCondensed" FontSize="48" />
                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
